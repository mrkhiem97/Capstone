@model MobileSurveillanceWebApplication.Models.ViewModel.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @*<link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css">*@
    @*  @Scripts.Render("~/bundles/jqueryui")*@
    @*    @Scripts.Render("~/bundles/modernizr")*@
    @*@Styles.Render("~/Content/themes/base/css")*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <script src="~/Scripts/bootstrap.js"></script>
    <title>Mobile Surveillance - Login</title>
</head>
<body>
    <div class="container" id="container">
        <!-- Main -->
        <div class="row">
            <div class="col-md-4 col-md-offset-5 login-form">
                <h2>Login to the system</h2>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message">@ViewBag.ErrorMessage</div>
                }
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter username" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>

                        <div class="editor-field">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter password" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>

                        <div class="editor-field">
                            @Html.EditorFor(model => model.RememberMe)
                            @Html.LabelFor(model => model.RememberMe)
                            @Html.ValidationMessageFor(model => model.RememberMe)
                        </div>

                        <div style="float:right">
                            <a href="retrievePassword.html">Forgot Password?</a>
                            @Html.ActionLink("Register", "Register", "Account", null, htmlAttributes: new { @class = "btn btn-default" })
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </fieldset>
                }
                <form role="form"></form>
            </div>

        </div>
        <!-- End of main -->
        <!-- Footer -->
        <div class="row" id="footer">
        </div>
        <!-- End of Footer -->
    </div>
</body>
</html>
