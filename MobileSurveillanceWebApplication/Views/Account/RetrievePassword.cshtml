@model MobileSurveillanceWebApplication.Models.ViewModel.RetrievePasswordViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    @*<link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css">*@
    @*  @Scripts.Render("~/bundles/jqueryui")*@
    @*    @Scripts.Render("~/bundles/modernizr")*@
    @*@Styles.Render("~/Content/themes/base/css")*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <script src="~/Scripts/bootstrap.js"></script>

    <title>Mobile Surveillance System - Retrieve Password</title>
</head>
<body>
    <div class="container" id="container">
        <!-- Main -->
        <div class="row" id="main">
            <div class="col-md-4 col-md-offset-4 login-form">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message">@ViewBag.ErrorMessage</div>
                }
                @using (Html.BeginForm("RetrievePassword", "Account", FormMethod.Post, new { @role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        @*<div class="editor-field">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter username" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>*@

                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter email" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>

                        <div style="float:right">
                            <input type="submit" value="RetrievePassword" class="btn btn-default" />
                        </div>
                    </fieldset>
                }
                <form role="form"></form>
            </div>

        </div>
        <!-- End of main -->
        <!-- Footer -->
        <div class="row" id="footer">
            <span>Copyright 2014</span>
        </div>
        <!-- End of Footer -->
    </div>
</body>
</html>
