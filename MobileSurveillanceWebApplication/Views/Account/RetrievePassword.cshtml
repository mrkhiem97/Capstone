@model MobileSurveillanceWebApplication.Models.ViewModel.RetrievePasswordViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <script src="~/Scripts/bootstrap.js"></script>

    <title>Mobile Surveillance System - Retrieve Password</title>
</head>
<body id="login-body">
    <div class="container" id="container">
        <!-- Main -->
        <div class="row" id="main">
            <div class="col-md-4 col-md-offset-4 login-form">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message">@ViewBag.ErrorMessage</div>
                }
                @using (Html.BeginForm("RetrievePassword", "Account", FormMethod.Post, new { @role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter email" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>

                        <div style="float:right">
                            <input type="submit" value="Retrieve Password" class="btn btn-default" />
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</body>
</html>
