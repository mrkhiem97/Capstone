@model MobileSurveillanceWebApplication.Models.ViewModel.ResetPasswordModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    @*<link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css">*@
    @*  @Scripts.Render("~/bundles/jqueryui")*@
    @*    @Scripts.Render("~/bundles/modernizr")*@
    @*@Styles.Render("~/Content/themes/base/css")*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <script src="~/Scripts/bootstrap.js"></script>

    <title>Mobile Surveillance System - Retrieve Password</title>
</head>
<body id="login-body">
    <div class="row" id="download-android">
        <h3>Mobile Surveillance</h3>
    </div>
    <div class="container" id="container">
        <!-- Main -->
        <div class="row" id="main">
            <div class="col-md-4 col-md-offset-4 login-form">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message">@ViewBag.ErrorMessage</div>
                }
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Check Your Email</h2>
                    <h5>We sent you an email with a key. Enter it below to continue to reset your password.</h5>
                    <fieldset>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Key)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.Key, new { @class = "form-control", @placeholder = "Enter username" })
                            @Html.ValidationMessageFor(model => model.Key)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Password)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter new password" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.ConfirmPassword)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter confirm password" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                        <div style="float:right">
                            <input type="submit" value="Reset Password" class="btn btn-default" />
                        </div>
                    </fieldset>
                }
            </div>
        </div>
        <!-- End of main -->
        <!-- Footer -->
        <!-- End of Footer -->
    </div>
</body>
</html>
