<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Mobile Surveillance</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui.datepicker.validation.min.js")">
    </script>
    <script src="@Url.Content("~/Scripts/jquery.bootstrap-growl.min.js")"></script>
    <script src="@Url.Content("~/Scripts/DatePickerScript.js")">
    </script>
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-1.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var notificationHub = $.connection.notificationHub;
            notificationHub.client.notifyAddFriendRequest = function (message) {
                refreshInbox();

                $.bootstrapGrowl(message, {
                    type: 'danger',
                    align: 'right',
                    width: 'auto',
                    height: '100',
                    offset: { from: 'top', amount: 80 }, // 'top', or 'bottom'
                    allow_dismiss: false,
                    stackup_spacing: 30
                });
            };
            notificationHub.client.notifyAcceptFriendRequest = function (message) {
                refreshInbox();

                $.bootstrapGrowl(message, {
                    type: 'danger',
                    align: 'right',
                    width: 'auto',
                    height: '100',
                    offset: { from: 'top', amount: 80 }, // 'top', or 'bottom'
                    allow_dismiss: false,
                    stackup_spacing: 30
                });
            };
            notificationHub.client.notifyCancelFriendRequest = function () {
                refreshInbox();
            };
            notificationHub.client.notifyDenyFriendRequest = function () {
                refreshInbox();
            };
            $.connection.hub.start().done(function () {
            });
            // This optional function html-encodes messages for display in the page.
            function htmlEncode(value) {
                var encodedValue = $('<div />').text(value).html();
                return encodedValue;
            };
        });
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
</head>
<body>
    <div class="container-fluid">
        <!-- Menu -->
        <nav class="navbar navbar-default navbar-fixed-top top-menu navbar-inverse" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">MobileSurveillance</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    @Html.Partial("_SearchPartial")
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("ListFriend", "User")">Friends <span id="countFriends" class="badge"></span></a></li>
                        <li>
                            <a href="@Url.Action("ListInbox", "User")">
                                <span class="glyphicon glyphicon-bell"></span>
                                <span id="countInbox" class="badge"></span>
                            </a>
                        </li>
                        <li class="active">@Html.Partial("_LoginPartial")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle glyphicon glyphicon-cog" data-toggle="dropdown"><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.Partial("_AdminPartial")</li>
                                <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>


        <!-- End of Menu -->
        <!-- Main -->
        <div class="content-display" id="main">

            <!-- Content Here-->
            <div class="body-content-right">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
            <!-- End of Content-->

        </div>
        <!-- End of main -->
        <!-- Footer -->
        <!-- End of Footer -->
    </div>
    <div style="text-align: center; margin-top:50px" id="footer">
        <div style="text-align: left; display: inline-block; /* for ie6/7: */ *display: inline; zoom: 1;">
        </div>
    </div>

    <!-- Javasript here -->
    <script type="text/javascript">
        $(document).ready(function () {
            refreshInbox();
        });
        function refreshInbox() {
            $.getJSON("/User/GetCountItems", {}, function (data) {
                $("#countFriends").text(data.countFriends);
                $("#countInbox").text(data.countInbox);
            });
        };
    </script>
</body>
</html>
