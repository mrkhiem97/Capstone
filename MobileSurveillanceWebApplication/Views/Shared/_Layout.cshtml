<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Mobile Surveillance</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/script")

    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-1.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var notificationHub = $.connection.notificationHub;
            notificationHub.client.addNewMessageToPage = function (message) {
                alert(message);
            };

            $.connection.hub.start().done(function () {
                $('#signalTest').click(function () {
                    notificationHub.server.send('MobileSurveillance');
                });
            });
            // This optional function html-encodes messages for display in the page.
            function htmlEncode(value) {
                var encodedValue = $('<div />').text(value).html();
                return encodedValue;
            };
        });
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

</head>
<body>
    <div class="container" id="container">
        <!-- Menu -->
        <nav class="navbar navbar-default navbar-fixed-top top-menu navbar-inverse" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">MobileSurveillance</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    @Html.Partial("_SearchPartial")
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Friends <span class="badge">42</span></a></li>
                        <li><a href="#">Inbox <span class="badge">3</span></a></li>
                        <li class="active">@Html.Partial("_LoginPartial")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle glyphicon glyphicon-cog" data-toggle="dropdown"><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.Partial("_AdminPartial")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>


        <!-- End of Menu -->
        <!-- Main -->
        <div class="content-display" id="main">
            <!-- Left navigator -->
            @*<div class="body-content-left">
                <div class="inside-left-menu">
                    <ul class="nav nav-pills nav-stacked">
                        <li>@Html.ActionLink("Trajectories", "ListTrajectory", "Trajectory")</li>
                        <li>@Html.ActionLink("Friends", "ListFriend", "User")</li>
                        <li><a href="#">Inbox</a></li>
                        <li></li>
                    </ul>
                </div>
            </div>*@
            <!-- End of left navigator-->
            <!-- Content Here-->
            <div class="body-content-right">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
            <!-- End of Content-->

        </div>
        <!-- End of main -->
        <!-- Footer -->
        <!-- End of Footer -->
    </div>
    <div class="content-display" id="footer">
        <p align="center"><input type="button" id="signalTest" name="Test" value="Test" />Copyright 2014 <br /> Mobile surveillance team</p>

    </div>


    
    
    
    <!-- Javasript here -->
    

</body>
</html>
